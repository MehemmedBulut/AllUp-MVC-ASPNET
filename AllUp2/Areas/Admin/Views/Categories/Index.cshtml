@model List<Category>


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">Categories</h4>
                    <div><a asp-action="Create" class="btn btn-primary">Create</a></div>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Parent
                                </th>
                                <th>
                                    Children
                                </th>
                                <th>
                                    IsMain
                                </th>
                                <th>
                                    Status
                                </th>
                                <th style="text-align:right">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (item.IsMain)
                                        {
                                            <img style="width:100px;height:100px; border-radius:5px;object-fit:cover" src="~/assets/images/@item.Image">
                                        }
                                        else
                                        {
                                            <label class="">Yoxdur</label>
                                        }
                                        
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @if (item.IsMain)
                                        {
                                            <label class="">Yoxdur</label>
                                        }
                                        else
                                        {
                                            <label class="">@item.Parent.Name</label>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsMain)
                                        {
                                            foreach (Category cat in item.Children)
                                            {
                                                <div>@cat.Name</div>
                                            }
                                        }
                                        else
                                        {
                                            <label class="">Yoxdur</label>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsMain)
                                        {
                                            <label class="">Parent</label>
                                        }
                                        else
                                        {
                                            <label class="">Child</label>
                                        }
                                    </td>
                                    <td>
                                        @if (!item.IsDeactive)
                                        {
                                            <label class="badge rounded-pill bg-success">Active</label>
                                        }
                                        else
                                        {
                                            <label class="badge rounded-pill bg-danger">Deactive</label>
                                        }
                                    </td>

                                    <td class="d-flex justify-content-end">
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning m-2 text-white">Detail</a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info m-2">Update</a>
                                        @*<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-2">Delete</a>*@
                                        @if (!item.IsDeactive)
                                        {
                                            <a style="width:132px" asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger m-2">Deactivated</a>
                                        }
                                        else
                                        {
                                            <a style="width:132px" asp-action="Activity" asp-route-id="@item.Id" class="btn btn-success m-2">Activated</a>
                                        }

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>





